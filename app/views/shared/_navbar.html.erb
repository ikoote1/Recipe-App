<div class="navbar navbar-expand-lg navbar-light bg-light">
  <% if user_signed_in? %>
    <h5 class="navbar-brand">Welcome, <%= current_user.email %></h5>
    <div class="ml-auto">
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
    </div>
  <% else %>
    <div class="ml-auto">
      <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary mr-2' %>
      <%= link_to 'Sign-up', new_user_registration_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

<div class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="navbar-nav mx-auto">
    <%= link_to 'Home', root_path, class: 'nav-link' %>
    <%= link_to 'Food List', foods_path, class: 'nav-link' %>
    <%= link_to 'Recipes List', recipes_path, class: 'nav-link' %>
    <%= link_to 'Shopping List', shopping_list_index_path, class: 'nav-link' %>
  </div>
</div>
<!-- index.html.erb -->
  <div class="header">
    <h1>Recipes</h1>
    <div class="act">
      <%= link_to 'Add Recipe', new_recipe_path %>
    </div>
  </div>

  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <div class="action">
      <h3><%= recipe.name %></h3>
        <%= link_to 'REMOVE', recipe, method: :delete, class: 'remove-btn' %>
      </div>
      <div class="description">
        <p><%= recipe.description %></p>
      </div>
    </div>
  <% end %>

  

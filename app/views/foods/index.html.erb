<!-- app/views/foods/index.html.erb -->

<p style="color: green"><%= notice %></p>

<p>
<%= link_to "Home", root_path, class: "back-to-home-link" %>
</p>

<h1>Foods</h1>
<%= link_to "Add Food", new_food_path, class: "add-food-link" %>

<div id="foods">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <%= render food %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_units %></td>
          <td>$<%= food.price %></td>
          <td><%= link_to "Delete", food, method: :delete, class: "delete-link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
